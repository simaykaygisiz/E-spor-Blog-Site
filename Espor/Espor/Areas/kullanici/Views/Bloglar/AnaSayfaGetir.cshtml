@model Espor.Models.blog
@{
    ViewBag.Title = "AnaSayfaGetir";
    Layout = "~/Areas/kullanici/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mt-4">Ana Sayfa Güncelle</h2>
<br />

@using (Html.BeginForm("AnaSayfaGuncelle", "Bloglar", FormMethod.Post))
{
    @Html.LabelFor(x => x.ID)
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "readonly" })
    <br />
    @Html.LabelFor(x => x.title)
    @Html.TextBoxFor(x => x.title, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.content)
    @Html.TextAreaFor(x => x.content, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.queue)
    @Html.TextBoxFor(x => x.queue, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Güncelle</button>
}
