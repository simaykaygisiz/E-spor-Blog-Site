@model List<Espor.Models.blog>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/kullanici/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-hover mt-3">
    <tr>
        <th>ID</th>
        <th>Başlık</th>
        <th>İçerik</th>
        <th>Sıra</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var blog in Model)
    {
        <tr>
            <td>@blog.ID</td>
            <td>@blog.title</td>
            <td>@blog.content</td>
            <td>@blog.queue</td>
            <td><a href="/kullanici/Bloglar/AnaSayfaGetir/@blog.ID" class="btn btn-secondary">Güncelle</a></td>
            <td><a href="/kullanici/Bloglar/BlogSil/@blog.ID" class="btn btn-secondary">Sil</a></td>
        </tr>
    }

</table>

<a href="/kullanici/Bloglar/YeniBlog/" class="btn btn-danger">Yeni Blog Ekle</a>

