@model Espor.Models.blog
@{
    ViewBag.Title = "YeniBlog";
    Layout = "~/Areas/kullanici/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mt-4">Yeni Blog Ekle</h2>
<br />

<form class="form-group" method="post">
    @Html.LabelFor(x => x.title)
    @Html.TextBoxFor(x => x.title, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.content)
    @Html.TextAreaFor(x => x.content, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.queue)
    @Html.TextBoxFor(x => x.queue, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Ekle</button>
</form>

